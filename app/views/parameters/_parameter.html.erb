<div id="<%= dom_id parameter %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nome:</strong>
    <%= parameter.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Descrição:</strong>
    <%= parameter.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to 'Visualizar', edit_parameter_path(parameter), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
