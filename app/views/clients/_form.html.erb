<%= form_with(model: client, class: "contents") do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :brand, "Nome" %>
    <%= form.text_field :brand, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <% unless action_name == 'new' %>
    <h1>Links webhooks</h1>
    <div class="my-5">
      <p class="mb-10">Hotmart: <%= webhook_hotmart_url client.token %>
        <span onclick="copyToClipboard(`<%= webhook_hotmart_url client.token %>`)" class="ml-3 button"><%= fa_icon "copy" %></span>
      </p>
      <p>Asaas: <%= webhook_asaas_url client.token %>
        <span onclick="copyToClipboard(`<%= webhook_asaas_url client.token %>`)" class="ml-3 button"><%= fa_icon "copy" %></span>
      </p>
    </div>
  <% end %>
  <%= render 'clients/parameters', parameters: @parameters, form: form, client: @client %>

  <div class="inline">
    <%= form.submit "Salvar", class: "button" %>
  </div>
<% end %>

<script>
    const copyToClipboard = str => {
        navigator.clipboard.writeText(str)
        alert("Copiado para área de transferência")
    };
</script>
